entrypoint = "index.js"
modules = ["nodejs-20"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-25_05"

[deployment]
run = ["node", "index.js"]
deploymentTarget = "autoscale"
ignorePorts = false

[agent]
expertMode = true

[workflows]
runButton = "run bot"

[[workflows.workflow]]
name = "run bot"
mode = "sequential"
author = 53230918

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
